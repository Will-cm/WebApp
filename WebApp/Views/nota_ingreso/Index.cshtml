@model IEnumerable<WebApp.Models.nota_ingreso>

@{
    ViewData["Title"] = "Index";
}

<h1>Contenido principal</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Nuevo</a>
</p>

            <!-- DataTales Example nota ingreso -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Lista</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                       <th>
                            @Html.DisplayNameFor(model => model.nro_doc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.movimiento)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.usuario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.estado)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sucursal)    <!--id_sucursal-->
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sucursal)  <!--id_suc_origen-->
                        </th>
                        <!--
                        <th>
                            @Html.DisplayNameFor(model => model.created_at)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.updated_at)
                        </th>   -->
                        <th>Acciones</th>
                    </tr>
                </thead>
                                    
                <tbody>
                    @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nro_doc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.movimiento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.usuario)
                        </td>
                        <td>
                            @{switch (item.estado){
                                case 1:
                                    <text>Habilitado</text>
                                break;
                                default:
                                    <text>DesHabilitado</text>
                                break; } 
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sucursal.codigo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sucursal.codigo)   <!--id_suc_origen-->
                        </td>
                        <!--
                        <td>
                            @Html.DisplayFor(modelItem => item.created_at)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.updated_at)
                        </td>  -->
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.id">Detalle</a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">Borrar</a>
                        </td>
                        
                    </tr>
                    }
                                        
                </tbody>
            </table>
        </div>
    </div>
</div>
