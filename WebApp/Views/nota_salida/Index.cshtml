@model IEnumerable<WebApp.Models.nota_salida>

@{
    ViewData["Title"] = "Index";
}

<h1>Contenido principal</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Nuevo</a>
</p>

            <!-- DataTales Example nota salida -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Lista</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                       <th>
                            @Html.DisplayNameFor(model => model.nro_doc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.fecha_emis)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.prioridad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.programacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.cod_cliente)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.raz_social)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.cod_vendedor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.estado)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sucursal)
                        </th>
                        <!--
                        <th>
                            @Html.DisplayNameFor(model => model.created_at)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.updated_at)
                        </th>  -->
                        <th></th>
                    </tr>
                </thead>
                                    
                <tbody>
                    @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nro_doc)
                        </td>
                        <td>
                            @{     
                              //@Html.DisplayFor(modelItem => item.fecha_venc)                                  
                              @Html.Raw(item.fecha_emis) //This throw error Cannot convert lambda expression to type string                                     
                             }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.prioridad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.programacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cod_cliente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.raz_social)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cod_vendedor)
                        </td>
                        <td>
                            @{switch (item.estado){
                                case 1:
                                    <text>Habilitado</text>
                                break;
                                default:
                                    <text>DesHabilitado</text>
                                break; } 
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sucursal.descripcion)
                        </td>
                        <!--
                        <td>
                            @Html.DisplayFor(modelItem => item.created_at)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.updated_at)
                        </td>  -->
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.id">Detalle</a> |  
                            <a class="btn btn-warning" asp-controller="picking_nsalida" asp-action="Index">Picking</a> | <!--add--> 
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">Borrar</a>
                        </td>
                        
                    </tr>
                    }
                                        
                </tbody>
            </table>
        </div>
    </div>
</div>
